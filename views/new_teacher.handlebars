<form action="/new_teacher" method="post">
    <div class="form-field">
        <span>Имя лектора</span>
        <input value="" name="name" placeholder="Имя лектора"/>
    </div>
    <div class="form-field">
        <span>Название файла фотографии</span>
        <input value="" name="photo" placeholder="Фото"/>
    </div>
    <div class="form-field">
        <span>О лекторе</span>
        <textarea name="about" placeholder="О лекторе"></textarea>
    </div>

    <button type="submit">Добавить</button>
</form>