<form action="/new_lecture" method="post">
    {{#if error}}
        <div class="error">{{error}}</div>
        <br>
    {{/if}}
    <div class="form-field">
        <span>Название лекции</span>
        <input value="" name="title" placeholder="Название лекции" required />
    </div>
    <div class="form-field">
        <span>Лектор</span>
        <input value="" name="teacher" placeholder="Лектор" required/>
    </div>
    <div class="form-field">
        <span>Место проведения</span>
        <input value="" name="place" placeholder="Место проведения" required/>
    </div>
    <div class="form-field">
        <span>Школа</span>
        <input value="" name="school" placeholder="Школа" required/>
    </div>
    <div class="form-field">
        <span>Дата (mm/dd/yyyy)</span>
        <input value="" name="date" placeholder="Дата" pattern="[0-9]{1,2}\/[0-9]{1,2}\/[0-9]{4}" required/>
    </div>

    <button type="submit">Добавить</button>
</form>