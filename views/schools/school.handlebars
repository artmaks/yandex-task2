<form action="/schools/{{school.id}}" method="post">
    <div class="form-field">
        <span>Название школы</span>
        <input value="{{school.title}}" name="title" placeholder="Название школы" required />
    </div>
    <div class="form-field">
        <span>Количество участников</span>
        <input value="{{school.members}}" name="members" placeholder="Количество участников" required />
    </div>

    <button type="submit">Сохранить</button>
</form>